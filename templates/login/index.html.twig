{% extends 'base.html.twig' %}


{% block body %}

    <div class="container my-5">

        <h1>Connexion...</h1>

           {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
           {% endif %}

           <form action="{{ path('app_login') }}" method="post">
               <label for="username">Email:</label>
               <input class="form-control mt-3" type="text" id="username" name="_username" value="{{ last_username }}">

               <label for="password">Mot de passe:</label>
               <input class="form-control mt-3" type="password" id="password" name="_password">

               
               <input type="hidden" name="_target_path" value="{{ path('app_account') }}"> 

                <button type="submit" class="btn btn-success mt-3">Connexion</button>
           </form>
           </br>

           <h3>Pas encore de compte...</h3><a href="{{ path('app_register') }}">M'inscrire..</a>
    </div>

{% endblock %}
