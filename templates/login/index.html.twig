{% extends 'base.html.twig' %}


{% block body %}

    <div class="container my-5">

        <h1 style="color: #028391">Connexion...</h1>

           {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
           {% endif %}

           <form action="{{ path('app_login') }}" method="post">
               <label for="username">Email:</label>
               <input class="form-control mt-3" type="text" id="username" name="_username" value="{{ last_username }}">

               <label for="password">Mot de passe:</label>
               <input class="form-control mt-3" type="password" id="password" name="_password">

               
               <input type="hidden" name="_target_path" value="{{ path('app_account') }}"> 

                <button type="submit" class="btn mt-3" style="background: #A10035; color: #FBA834">Connexion</button>
           </form>
           </br>

           <h4 style="color: #028391" >Pas encore de compte...</h4><a href="{{ path('app_register') }}" style="color: #028391">M'inscrire..</a></br></br>
           <h4 style="color: #028391" >Mot de passe oublié...</h4><a href="{{ path('app_password') }}" style="color: #028391">Mot de passe oublié</a>
    </div>

{% endblock %}
